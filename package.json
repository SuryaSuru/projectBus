{
  "name": "nodejs-expressjs-typescript-backend-starter-project",
  "version": "1.0.0",
  "main": "dist/main/server.js",
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig-build.json",
    "build:watch": "tsc -p tsconfig-build.json --watch",
    "start": "node dist/main/server.js",
    "dev": "yarn run build && nodemon -L --watch ./dist ./dist/main/server.js",
    "start:dev": "concurrently --kill-others-on-fail \"yarn run build:watch\" \"yarn run dev\"",
    "test": "jest --passWithNoTests --runInBand --no-cache",
    "test:staged": "yarn run test -- --findRelatedTests",
    "test:ci": "yarn run test -- --coverage",
    "lint": "eslint --ignore-path .gitignore --ext .ts --fix",
    "prepare": "husky install"
  },
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "@shelf/jest-mongodb": "^4.1.7",
    "@types/jest": "^29.5.3",
    "@types/node": "^20.4.4",
    "@types/nodemailer": "^6.4.14",
    "@types/supertest": "^2.0.12",
    "concurrently": "^8.2.0",
    "eslint-config-standard-with-typescript": "^37.0.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0 || ^16.0.0 ",
    "eslint-plugin-promise": "^6.0.0",
    "husky": "^8.0.0",
    "jest": "^29.6.1",
    "lint-staged": "^13.2.3",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "typescript": "*"
  },
  "dependencies": {
    "@types/express": "^4.17.17",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "joi": "^17.9.2",
    "module-alias": "^2.2.3",
    "monet": "^0.9.3",
    "mongodb": "^5.7.0",
    "mongoose": "^7.6.8",
    "msg91": "^2.2.4",
    "nodemailer": "^6.9.9",
    "nodemon": "^3.0.1",
    "validator": "^13.9.0",
    "yarn": "^1.22.21"
  },
  "_moduleAliases": {
    "@domain": "dist/domain",
    "@data": "dist/data",
    "@presentation": "dist/presentation",
    "@main": "dist/main"
  }
}
